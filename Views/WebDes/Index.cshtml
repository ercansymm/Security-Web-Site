        --border-radius: 1rem;
        --border-radius-lg: 1.25rem;
        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2rem;
        --spacing-xl: 3rem;
    }

    .site-description-page {
        padding: var(--spacing-lg);
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        min-height: calc(100vh - var(--topbar-height));
