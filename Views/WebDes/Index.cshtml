        background: white;
        border-radius: var(--border-radius-lg);
        padding: var(--spacing-xl);
        margin-bottom: var(--spacing-lg);
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: var(--spacing-lg);
    }

    .welcome-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: var(--spacing-lg);
    }

    .welcome-icon {
        width: 80px;
        height: 80px;
        background: var(--primary-gradient);
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2rem;
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        flex-shrink: 0;
    }

    .welcome-text {
        flex: 1;
    }

        .welcome-text h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #1a202c;
            margin-bottom: 0.5rem;
            letter-spacing: -0.025em;
        }

        .welcome-text p {
            color: #64748b;
            font-size: 1.125rem;
            margin: 0;
            line-height: 1.6;
        }

    .welcome-stats {
        display: flex;
        align-items: center;
        gap: var(--spacing-md);
    }

    .stat-item {
        text-align: center;
    }

    .stat-value {
        font-size: 1.875rem;
        font-weight: 700;
        color: #667eea;
        line-height: 1;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #64748b;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .stat-divider {
        width: 1px;
        height: 40px;
        background: #e2e8f0;
    }

    /* Editor Container */
    .editor-container {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: var(--spacing-lg);
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Editor Card */
    .editor-card {
        background: white;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        overflow: hidden;
        height: fit-content;
    }

    .editor-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: var(--spacing-lg);
        background: linear-gradient(135deg, #f8fafc 0%, #e8f4fd 100%);
        border-bottom: 1px solid #e2e8f0;
    }

    .editor-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.25rem;
        font-weight: 600;
        color: #2d3748;
    }

        .editor-title i {
            color: #667eea;
        }

    .editor-toolbar {
        display: flex;
        gap: 0.5rem;
    }

    .toolbar-btn {
        width: 36px;
        height: 36px;
        border: 1px solid #e2e8f0;
        background: white;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        color: #64748b;
        transition: all 0.2s ease;
    }

        .toolbar-btn:hover {
            background: #f8fafc;
            color: #667eea;
            border-color: #cbd5e0;
            transform: scale(1.05);
        }

    .description-form {
        padding: 0;
    }

    .editor-body {
        padding: var(--spacing-lg);
    }

    .textarea-container {
        position: relative;
        background: #fafbfc;
        border-radius: var(--border-radius);
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
    }

        .textarea-container:focus-within {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            background: white;
        }

    .modern-textarea {
        width: 100%;
        min-height: 250px;
        padding: var(--spacing-lg);
        border: none;
        background: transparent;
