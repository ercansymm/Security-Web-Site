@model SecurityWebSite.Models.WebDe
@{
    ViewData["Title"] = "Site Açıklaması";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="site-description-page">
    <!-- Welcome Card -->
    <div class="welcome-card">
        <div class="welcome-content">
            <div class="welcome-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="welcome-text">
                <h2>Site Açıklaması Yönetimi</h2>
                <p>Ana sayfada ziyaretçilere gösterilecek açıklama metnini buradan düzenleyebilirsiniz</p>
            </div>
            <div class="welcome-stats">
                <div class="stat-item">
                    <div class="stat-value">@(Model?.CardDescription?.Length ?? 0)</div>
                    <div class="stat-label">Karakter</div>
                </div>
                <div class="stat-divider"></div>
                <div class="stat-item">
                    <div class="stat-value">Live</div>
                    <div class="stat-label">Durum</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Editor Card -->
    <div class="editor-container">
        <div class="editor-card">
            <div class="editor-header">
                <div class="editor-title">
                    <i class="fas fa-pen-to-square"></i>
                    <span>Metin Düzenleyici</span>
                </div>
                <div class="editor-toolbar">
                    <button type="button" class="toolbar-btn" onclick="formatText('bold')" title="Kalın">
                        <i class="fas fa-bold"></i>
                    </button>
                    <button type="button" class="toolbar-btn" onclick="formatText('italic')" title="İtalik">
                        <i class="fas fa-italic"></i>
                    </button>
                    <button type="button" class="toolbar-btn" onclick="clearText()" title="Temizle">
                        <i class="fas fa-eraser"></i>
                    </button>
                </div>
            </div>

            <form method="post" asp-action="Create" class="description-form">
                <div class="editor-body">
                    <div class="textarea-container">
                        <textarea name="CardDescription"
                                  id="descriptionText"
                                  class="modern-textarea"
                                  placeholder="Site açıklaması metnini buraya yazın... Bu metin ana sayfada ziyaretçiler tarafından görülecektir."
                                  maxlength="2000"
                                  required>@(Model?.CardDescription ?? "")</textarea>

                        <div class="textarea-footer">
                            <div class="character-info">
                                <span class="char-count" id="charCount">@(Model?.CardDescription?.Length ?? 0)</span>
                                <span class="char-max">/ 2000</span>
                            </div>
                            <div class="word-count">
                                <span id="wordCount">0</span> kelime
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-footer">
                    <div class="footer-info">
                        <i class="fas fa-info-circle"></i>
                        <span>Değişiklikler anında yayına alınacaktır</span>
                    </div>
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-rocket"></i>
                        <span>Kaydet ve Yayınla</span>
                    </button>
                </div>
            </form>
        </div>

        <!-- Preview Card -->
        @if (!string.IsNullOrEmpty(Model?.CardDescription))
        {
            <div class="preview-card">
                <div class="preview-header">
                    <div class="preview-title">
                        <i class="fas fa-desktop"></i>
                        <span>Canlı Önizleme</span>
                    </div>
                    <div class="preview-badge">
                        <i class="fas fa-eye"></i>
                        Ziyaretçi Görünümü
                    </div>
                </div>

                <div class="preview-body">
                    <div class="browser-mockup">
                        <div class="browser-header">
                            <div class="browser-controls">
                                <span class="control red"></span>
                                <span class="control yellow"></span>
                                <span class="control green"></span>
                            </div>
                            <div class="browser-url">www.yoursite.com</div>
                        </div>
                        <div class="browser-content">
                            <div class="site-preview">
                                <h3 class="preview-section-title">Hoş Geldiniz</h3>
                                <p class="preview-description">@Model.CardDescription</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
