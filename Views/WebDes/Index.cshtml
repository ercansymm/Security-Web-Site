            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

    /* Preview Card */
    .preview-card {
        background: white;
        border-radius: var(--border-radius-lg);
        box-shadow: var(--card-shadow);
        border: 1px solid #e2e8f0;
        height: fit-content;
        position: sticky;
        top: var(--spacing-lg);
    }

    .preview-header {
        padding: var(--spacing-lg);
        border-bottom: 1px solid #f1f5f9;
        background: linear-gradient(135deg, #f8fafc 0%, #e8f4fd 100%);
    }

    .preview-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 0.5rem;
    }

        .preview-title i {
            color: #3182ce;
        }

    .preview-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.375rem 0.75rem;
        background: var(--success-gradient);
        color: white;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .preview-body {
        padding: var(--spacing-lg);
    }

    .browser-mockup {
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        border: 1px solid #e2e8f0;
    }

    .browser-header {
        background: #f1f5f9;
        padding: 0.75rem 1rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .browser-controls {
        display: flex;
        gap: 0.5rem;
    }

    .control {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

        .control.red {
            background: #ef4444;
        }

        .control.yellow {
            background: #f59e0b;
        }

        .control.green {
            background: #10b981;
        }

    .browser-url {
        background: white;
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
        font-size: 0.75rem;
        color: #64748b;
        border: 1px solid #e2e8f0;
        flex: 1;
    }

    .browser-content {
        background: white;
        min-height: 200px;
    }

    .site-preview {
        padding: var(--spacing-xl);
        text-align: center;
    }

    .preview-section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: var(--spacing-md);
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .preview-description {
        font-size: 1rem;
        line-height: 1.7;
        color: #4a5568;
        margin: 0;
        max-width: 100%;
    }


</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const textarea = document.getElementById('descriptionText');
        const charCount = document.getElementById('charCount');
        const wordCount = document.getElementById('wordCount');

        function updateCounts() {
            const text = textarea.value;
            const length = text.length;
            const words = text.trim().split(/\s+/).filter(word => word.length > 0).length;

            charCount.textContent = length;
            wordCount.textContent = words;

            // Character count color feedback
            if (length > 1800) {
                charCount.style.color = '#ef4444';
            } else if (length > 1500) {
                charCount.style.color = '#f59e0b';
            } else {
                charCount.style.color = '#667eea';
            }
        }

        if (textarea && charCount) {
            textarea.addEventListener('input', updateCounts);
            updateCounts(); // Initial count
        }

        // Auto-save functionality (optional)
        let saveTimeout;
        textarea.addEventListener('input', function() {
            clearTimeout(saveTimeout);
            saveTimeout = setTimeout(() => {
                // Auto-save logic here if needed
                console.log('Auto-saving...');
            }, 2000);
        });
    });

    // Toolbar functions
    function formatText(command) {
        const textarea = document.getElementById('descriptionText');
        const start = textarea.selectionStart;
        const end = textarea.selectionEnd;
        const selectedText = textarea.value.substring(start, end);

        if (selectedText) {
            let formattedText = selectedText;
            if (command === 'bold') {
                formattedText = `**${selectedText}**`;
            } else if (command === 'italic') {
                formattedText = `*${selectedText}*`;
            }

            textarea.value = textarea.value.substring(0, start) + formattedText + textarea.value.substring(end);
            textarea.focus();
            textarea.setSelectionRange(start, start + formattedText.length);
        }
    }

    function clearText() {
        if (confirm('Metni tamamen temizlemek istediğinizden emin misiniz?')) {
            document.getElementById('descriptionText').value = '';
            document.getElementById('charCount').textContent = '0';
            document.getElementById('wordCount').textContent = '0';
        }
    }

    // Success notification
    function showSuccessMessage() {
        const notification = document.createElement('div');
        notification.className = 'success-notification';
        notification.innerHTML = `
            <i class="fas fa-check-circle"></i>
            <span>Site açıklaması başarıyla güncellendi!</span>
        `;

        document.body.appendChild(notification);

        setTimeout(() => {
            notification.classList.add('show');
        }, 100);

        setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => {
                if (notification.parentNode) {
                    document.body.removeChild(notification);
                }
            }, 300);
        }, 3000);
    }
</script>

<style>
    /* Success notification */
    .success-notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background: var(--success-gradient);
        color: white;
        padding: 1rem 1.5rem;
        border-radius: var(--border-radius);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        box-shadow: var(--card-shadow-hover);
        transform: translateX(400px);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        z-index: 9999;
    }

        .success-notification.show {
            transform: translateX(0);
        }

        .success-notification i {
            font-size: 1.25rem;
        }
</style>