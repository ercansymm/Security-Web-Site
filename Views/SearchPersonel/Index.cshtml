        .search-container {
            margin: 1.5rem auto;
            padding: 2.5rem;
        }

        .page-title {
            font-size: 2.5rem;
            margin-bottom: 2.5rem;
        }

        .step-container {
            gap: 1.5rem;
        }

        .step-item {
            padding: 1.75rem;
        }

        .step-content {
            margin-left: 2.5rem;
        }

