                this.showKvkkModal = false;
                document.getElementById('kvkkModal').style.display = 'none';
                document.body.style.overflow = 'auto';
                this.kvkkAccepted = false;
            },

            acceptKvkk() {
                if (this.kvkkAccepted) {
                    this.isKvkkAccepted = true;
                    this.closeKvkkModal();

                    Swal.fire({
                        icon: 'success',
                        title: 'KVKK Onaylandı!',
                        text: 'Artık başvurunuzu gönderebilirsiniz.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                }
            },

            handleFileUpload(event) {
                const file = event.target.files[0];
                if (file) {
                    this.formData.image = file;

                    const reader = new FileReader();
                    reader.onload = (e) => {
                        this.imagePreview = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            },

            formatPhoneNumber(event) {
                let value = event.target.value.replace(/\D/g, '');

                if (value && !value.startsWith('0')) {
                    value = '0' + value;
                }

                if (value.length > 11) {
                    value = value.substring(0, 11);
                }

                let formattedValue = value;
                if (value.length > 4) {
                    formattedValue = value.substring(0, 4) + ' ' + value.substring(4);
                }
                if (value.length > 7) {
                    formattedValue = value.substring(0, 4) + ' ' + value.substring(4, 7) + ' ' + value.substring(7);
                }
                if (value.length > 9) {
                    formattedValue = value.substring(0, 4) + ' ' + value.substring(4, 7) + ' ' + value.substring(7, 9) + ' ' + value.substring(9);
                }

                this.formData.phoneNumber = formattedValue;
            },

            showAlertMessage(type, title, message, errors = null) {
                if (type === 'success') {
                    Swal.fire({
                        icon: 'success',
                        title: title,
                        html: `
                            <div style="text-align: left; margin: 1rem 0;">
                                <p style="color: #374151; margin: 0.5rem 0;"><strong>Ad Soyad:</strong> ${this.formData.cardName} ${this.formData.lastName}</p>
                                <p style="color: #374151; margin: 0.5rem 0;"><strong>Telefon:</strong> ${this.formData.phoneNumber}</p>
                                <p style="color: #374151; margin: 0.5rem 0;"><strong>Şehir:</strong> ${this.formData.city}</p>
                                <p style="color: #374151; margin: 0.5rem 0;"><strong>Pozisyon:</strong> ${this.formData.isAdvice === 'true' ? 'Danışma/Karşılama' : 'Güvenlik Personeli'}</p>
                                <p style="color: #374151; margin: 0.5rem 0;"><strong>Güvenlik Türü:</strong> ${this.formData.gun === 'true' ? 'Silahlı' : 'Silahsız'}</p>
                            </div>
                            <div style="background: #f0f9ff; padding: 0.5rem; border-radius: 4px; margin-top: 1rem;">
                                <small style="color: #1e40af;">${message}</small>
                            </div>
                        `,
                        confirmButtonText: 'Harika!',
                        confirmButtonColor: '#10b981',
                        width: '500px',
                        backdrop: true,
                        allowOutsideClick: false
                    });
                } else {
                    let errorContent = message;

                    if (errors && errors.length > 0) {
                        errorContent = `
                            <div style="text-align: left; margin: 1rem 0;">
                                <p style="margin-bottom: 1rem; color: #374151;">${message}</p>
                                <ul style="color: #dc2626; margin: 0; padding-left: 1.2rem;">
                                    ${errors.map(error => `<li style="margin: 0.3rem 0;">${error}</li>`).join('')}
                                </ul>
                            </div>
                        `;
                    }

                    Swal.fire({
                        icon: 'error',
                        title: title,
                        html: errorContent,
                        confirmButtonText: 'Tamam',
                        confirmButtonColor: '#ef4444',
                        backdrop: true,
                        allowOutsideClick: false,
                        width: '500px'
                    });
                }
            },

            removeImage() {
                this.formData.image = null;
                this.imagePreview = null;
                document.getElementById('image').value = '';
            },

            async submitForm() {
                this.isSubmitting = true;

                try {
                    const cleanPhone = this.formData.phoneNumber.replace(/\D/g, '');

                    const formData = new FormData();
                    formData.append('CardName', this.formData.cardName);
                    formData.append('LastName', this.formData.lastName);
                    formData.append('PhoneNumber', cleanPhone);
                    formData.append('City', this.formData.city);
                    formData.append('YearsOld', this.formData.yearsOld);
                    formData.append('Working', this.formData.working);
                    formData.append('Gun', this.formData.gun === 'true');
                    formData.append('Shift', this.formData.shift);
                    formData.append('IsAdvice', this.formData.isAdvice === 'true');

                    if (this.formData.image) {
                        formData.append('Image', this.formData.image);
                    }

                    const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    if (token) {
                        formData.append('__RequestVerificationToken', token);
                    }

                    const response = await fetch('/Personels/Create', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();

                    if (result.success) {
                        this.showAlertMessage('success', 'Başarılı!', result.message);
                        this.resetForm();
                    } else if (result.rateLimited) {
                        Swal.fire({
                            icon: 'warning',
                            title: 'Başvuru Limiti!',
                            html: `
                                <div style="text-align: center;">
                                    <i class="fas fa-clock" style="font-size: 3rem; color: #f59e0b; margin-bottom: 1rem;"></i>
                                    <p style="color: #374151; margin: 1rem 0;">${result.message}</p>
                                    <div style="background: #fef3c7; padding: 1rem; border-radius: 8px; margin-top: 1rem;">
                                        <small style="color: #92400e;">
                                            <i class="fas fa-info-circle"></i>
                                            Spam önleme amacıyla günlük başvuru limiti uygulanmaktadır.
                                        </small>
                                    </div>
                                </div>
                            `,
                            confirmButtonText: 'Anladım',
                            confirmButtonColor: '#f59e0b',
                            width: '500px'
                        });
                    } else {
                        this.showAlertMessage('error', 'Hata!', result.message, result.errors);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    this.showAlertMessage('error', 'Bağlantı Hatası!', 'Sunucuya bağlanılamadı. İnternet bağlantınızı kontrol edin.');
                } finally {
                    this.isSubmitting = false;
                }
            },

            resetForm() {
                this.formData = {
                    cardName: '',
                    lastName: '',
                    phoneNumber: '',
                    city: '',
                    yearsOld: null,
                    working: false,
                    gun: '',
                    shift: false,
                    isAdvice: '',
                    image: null
                };
                this.imagePreview = null;
                this.isKvkkAccepted = false; // KVKK onayını da sıfırla
                document.getElementById('image').value = '';
            }
        }
    }).mount('#personelApp');
</script>